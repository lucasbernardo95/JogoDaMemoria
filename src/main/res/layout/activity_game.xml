        <ImageButton android:src="@drawable/interrogacao"/>
        <ImageButton android:src="@drawable/interrogacao"/>
        <ImageButton android:src="@drawable/interrogacao"/>
    </TableRow>
    <TableRow>
        <ImageButton android:src="@drawable/interrogacao"/>
        <ImageButton android:src="@drawable/interrogacao"/>
        <ImageButton android:src="@drawable/interrogacao"/>
        <ImageButton android:src="@drawable/interrogacao"/>
        <ImageButton android:src="@drawable/interrogacao"/>
    </TableRow>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nomeJogador"
            android:id="@+id/TextNomeJogador"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nomeJogador" />

